{% extends "base-back-clean.html.twig" %}
{% block content %}

    <div class="col-xl-6">

        <div class="card mb-3">

            <div class="card-body">

                <div class="d-flex fw-bold small mb-3">
                    <span class="flex-grow-1">Events </span>
                    <a href="#" data-toggle="card-expand" class="text-white text-opacity-50 text-decoration-none"><i class="bi bi-fullscreen"></i></a>
                </div>


                <div class="table-responsive">
                    <table class="table table-striped table-borderless mb-2px small text-nowrap">
                        <tbody>
                        {% for event in events %}
                            <tr>
                                <td>
<span class="d-flex align-items-center">
<i class="bi bi-circle-fill fs-6px text-white text-opacity-25 me-2"></i>
{{ event.nom }}
</span>
                                </td>
                                <td><small>{{ event.id }}</small></td>
                                <td>
                                    <span class="badge d-block bg-white bg-opacity-25 rounded-0 pt-5px w-70px" style="min-height: 18px">{{ event.organisateur }}</span>
                                </td>
                                <td><a href="{{ path('edit_event',{ 'id': event.id }) }}" class="text-decoration-none text-white">Edit</a></td>
                                <td><a href="{{ path('delete_event',{ 'id': event.id }) }}" class="text-decoration-none text-white">Delete</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

{% endblock %}