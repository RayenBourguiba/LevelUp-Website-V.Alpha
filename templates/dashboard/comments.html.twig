{% extends "base-dashboard.html.twig" %}
{% block content %}

        <div class="card">
            <div class="card-body">
                <table id="datatableDefault" class="table text-nowrap w-100">
                    <thead>
                        <tr>
                            <th>
                                id
                                                            
                            </th>
                            <th>
                                blog
                                                            
                            </th>
                            <th>
                                user
                                                            
                            </th>
                            <th>
                                content
                                                            
                            </th>
                            <th>
                                Date
                                                            
                            </th>

                            <th>
                                actions                      
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for commentaire in commentaires %}
                        <tr>
                            <td>{{ commentaire.id }}</td>
                            <td>{{ commentaire.blog }}</td>
                            <td>{{ commentaire.user }}</td>
                            <td>{{ commentaire.contenu }}</td>
                            <td>{{ commentaire.date ? commentaire.date |date('Y-m-d H:i:s') : '' }}</td>
                            <td><a class="bi bi-pencil" href="{{ path('commentaire_edit', {'id': commentaire.id}) }}"></a>
                            {{ include('commentaire/_delete_form.html.twig') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="card-arrow">
                <div class="card-arrow-top-left"></div>
                <div class="card-arrow-top-right"></div>
                <div class="card-arrow-bottom-left"></div>
                <div class="card-arrow-bottom-right"></div>
            </div>
        </div>
        <a class="white" href="{{ path('commentaire_new') }}"><button class="button-style1 m-4" style="float: right;">Add Comment</button></a>
    
{% endblock %}