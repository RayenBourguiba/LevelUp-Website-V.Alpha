{% extends "base-dashboard.html.twig" %}
{% block content %}
    <a href="{{ path('add_ranking') }}"><button type="button" style="margin-left: 15px; margin-bottom: 15px;" class="btn btn-theme">Add Ranking</button></a>

    <div class="col-xl-6">

        <div class="card mb-3">

            <div class="card-body">

                <div class="d-flex fw-bold small mb-3">
                    <span class="flex-grow-1">Ranks </span>
                    <a href="#" data-toggle="card-expand" class="text-white text-opacity-50 text-decoration-none"><i class="bi bi-fullscreen"></i></a>
                </div>


                <div class="table-responsive">
                    <table class="table table-striped table-borderless mb-2px small text-nowrap">
                        <tbody>
                        {% for c in classement %}
                            <tr>
                                <td>
<span class="d-flex align-items-center">
<i class="bi bi-circle-fill fs-6px text-white text-opacity-25 me-2"></i>
{{ c.rang }}
</span>
                                </td>
                                <td><small>{{ c.equipe.nom }}</small></td>
                                <td>
                                    <span class="badge d-block bg-white bg-opacity-25 rounded-0 pt-5px w-150px" style="min-height: 18px">{{ c.evenement.nom }}</span>
                                </td>
                                <td><a href="{{ path('edit_classement',{ 'id': c.id }) }}" class="text-decoration-none text-white">Edit</a></td>
                                <td><a href="{{ path('delete_classement',{ 'id': c.id }) }}" class="text-decoration-none text-white">Delete</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

{% endblock %}